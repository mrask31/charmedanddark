# Shopify Storefront API (for cart.checkoutUrl)
NEXT_PUBLIC_SHOPIFY_STOREFRONT_ACCESS_TOKEN=your_storefront_access_token
NEXT_PUBLIC_SHOPIFY_STORE_DOMAIN=your-store.myshopify.com

# Shopify Admin API (for fallback order fetch)
SHOPIFY_ADMIN_ACCESS_TOKEN=your_admin_access_token

# Shopify Webhook Secret (for HMAC verification)
SHOPIFY_WEBHOOK_SECRET=your_webhook_secret

# App Secret (for signed token generation)
APP_SECRET=your_app_secret_min_32_chars

# Supabase
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key
